{
  "name": "prompt-middleware",
  "displayName": "prompt middleware",
  "publisher": "kueckelheim",
  "repository": {
    "type": "git",
    "url": "https://github.com/kueckelheim/prompt-middleware"
  },
  "description": "A GitHub Copilot chat participant that refines your prompts and includes context",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "icon": "./assets/refine.png",
  "contributes": {
    "commands": [
      {
        "command": "prompt-middleware.copyToClipboard",
        "title": "Copy refined prompt to clipboard",
        "category": "Prompt Middleware"
      }
    ],
    "chatParticipants": [
      {
        "id": "prompt-middleware.refine",
        "name": "refine",
        "fullName": "Refine",
        "description": "A GitHub copilot wrapper to refine your prompts and includes context",
        "isSticky": true
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
